@{
    ViewData["Title"] = "Home Page";
}
  

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sma fixed-top">
        <div class="container">
            <!-- Brand Name -->
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">StudentPortal</a>

            <!-- Toggler for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Nav links -->
            <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<section class="text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-4 fw-bold">StudentPortal</h1>
        <p class="lead text-muted">
            Learn smarter. Connect faster. Grow together.
        </p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg mt-3 px-4">Get Started</a>
    </div>
</section>

<!-- Mission Section -->
<section class="py-5 bg-white">
    <div class="container text-center">
        <h2 class="fw-semibold mb-3">Our Mission</h2>
        <p class="text-muted fs-5 mx-auto" style="max-width: 700px;">
            At StudentPortal, we believe in empowering students and tutors with the right tools to succeed.
            Whether it's managing subjects, sharing resources, or real-time chatting — we exist to streamline learning through modern tech.
        </p>
    </div>
</section>

<!-- What You Can Do Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-semibold mb-4">What You Can Do</h2>
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h5 class="fw-bold mb-2">📚 Manage Subjects</h5>
                    <p class="text-muted">Track enrolled courses, assigned tutors, and performance.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h5 class="fw-bold mb-2">💬 Real-time Chat</h5>
                    <p class="text-muted">Join chat channels with classmates or get help from tutors.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded shadow-sm h-100">
                    <h5 class="fw-bold mb-2">📁 Share Materials</h5>
                    <p class="text-muted">Tutors can upload learning materials, notes, or resources.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Version Info -->
<section class="py-5 bg-white">
    <div class="container text-center">
        <h2 class="fw-semibold mb-3">App Version</h2>
        <p class="text-muted fs-5">StudentPortal v1.0.0 – built with ASP.NET Core & MySQL</p>
        <p class="text-muted">Last updated: July 2025</p>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-gradient text-white" style="background: linear-gradient(to right, #4a90e2, #007aff);">
    <div class="container text-center">
        <h2 class="fw-bold mb-3">Ready to get started?</h2>
        <p class="fs-5">Create your account and take control of your learning today.</p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg mt-3 px-4">Join Now</a>
    </div>
</section>

