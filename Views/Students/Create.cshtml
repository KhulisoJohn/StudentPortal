@model StudentPortal.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<h1>Create Student</h1>

<h4>Student</h4>
<hr />

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserProfileId" class="control-label">User Profile</label>
        <select asp-for="UserProfileId" class="form-control"
                asp-items="@(new SelectList(ViewBag.UserProfiles, "Id", "Username"))">
            <option value="">-- Select Username --</option>
        </select>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
