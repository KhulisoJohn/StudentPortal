@model StudentPortal.Models.StudentCourse

@{
    ViewData["Title"] = "Remove Enrollment";
}

<h1>Remove Enrollment</h1>

<p>Are you sure you want to remove this enrollment?</p>

<dl class="row">
    <dt class="col-sm-2">Student</dt>
    <dd class="col-sm-10">@Model.Student?.FullName</dd>

    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.Course?.Title</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="StudentId" />
    <input type="hidden" asp-for="CourseId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
