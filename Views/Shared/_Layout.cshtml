<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/StudentPortal.styles.css" asp-append-version="true" />
</head>
<body>
  
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer class="bg-light text-muted pt-5 pb-4 border-top mt-5">
  <div class="container">
    <div class="row gy-4">
      <!-- About -->
      <div class="col-md-4 text-center text-md-start">
        <h5 class="fw-bold mb-3">StudentPortal</h5>
        <p>Empowering students and tutors to connect, learn, and grow together through modern education tools.</p>
      </div>

      <!-- Quick Links -->
      <div class="col-md-2 text-center text-md-start">
        <h6 class="fw-semibold mb-3">Quick Links</h6>
        <ul class="list-unstyled">
          <li><a href="/" class="text-muted text-decoration-none">Home</a></li>
          <li><a href="/Account/Login" class="text-muted text-decoration-none">Login</a></li>
          <li><a href="/Account/Register" class="text-muted text-decoration-none">Register</a></li>
          <li><a href="/Home/Privacy" class="text-muted text-decoration-none">Privacy</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="col-md-3 text-center text-md-start">
        <h6 class="fw-semibold mb-3">Contact</h6>
        <p class="mb-1">📧 <a href="mailto:khuliso.thavhiwa@techbridle.org" class="text-muted text-decoration-none">khuliso.thavhiwa@techbridle.org</a></p>
        <p class="mb-1">📞 <a href="tel:+27818854153" class="text-muted text-decoration-none">+27 (081) 885-4153</a></p>
        <p>📍 123 Learning Ave,<br />Roodepoot, Gauteng, 1725</p>
      </div>

      <!-- Social Media -->
      <div class="col-md-3 text-center text-md-start">
        <h6 class="fw-semibold mb-3">Follow Us</h6>
        <div class="d-flex gap-3 justify-content-center justify-content-md-start fs-4">
          <a href="#" class="text-muted"><i class="bi bi-facebook"></i></a>
          <a href="#" class="text-muted"><i class="bi bi-twitter"></i></a>
          <a href="#" class="text-muted"><i class="bi bi-instagram"></i></a>
          <a href="#" class="text-muted"><i class="bi bi-linkedin"></i></a>
        </div>
      </div>
    </div>

    <div class="text-center mt-4 pt-3 border-top">
      <small>&copy; 2025 StudentPortal. All rights reserved.</small>
    </div>
  </div>
</footer>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
